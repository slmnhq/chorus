<form>
    <label for="db_username">{{t translationKeys.body translationValues}}</label>
    <input
        type="text"
        id="db_username"
        name="dbUsername"
        maxlength=256
        placeholder='{{t "instances.account.username"}}'
        tabindex="1"
        value={{dbUsername}}
    ></input>
    <input
        type="password"
        name="dbPassword"
        maxlength=256
        placeholder='{{t "instances.account.password"}}'
        tabindex="1"
    ></input>

    <div class="modal_controls">
        <button type="button" class="cancel" tabindex=4>{{t translationKeys.cancel}}</button>
        <button type="submit" class="submit" tabindex=3>{{t "instances.account.button.save"}}</button>
    </div>
</form>
